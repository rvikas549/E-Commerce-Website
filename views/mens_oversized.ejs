    <style>
        * {
            font-family: inherit !important;
        }
        body {
            font-family: 'Righteous', serif !important;
            font-weight: 400;
            font-style: normal;
        }
        /* Default category item styles */
        .filter-button {
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .filter-button.active {
            background-color: green;
            color: white;
        }

        .filter-button:not(.active):hover {
            background-color: #f0f0f0;
            transform: scale(1.05);
        }

        /* Wrapper for each category item */
        .category-item {
            display: inline-block;
            position: relative;
            text-align: center;
            transition: transform 0.3s ease;
            overflow: hidden;
            width: 50%;
        }

        .category-item img {
            display: block;
            width: 75%;
            height: 300px;
            transition: opacity 0.3s ease-in-out;
            border-radius: 8px;
            cursor: pointer;
        }

        .category-item:hover {
            transform: scale(1.1);
            box-shadow: 0 4px 15px rgba(3, 0, 0, 0.9);
            border-radius: 8px;
        }

        .category-item:hover img {
            opacity: 0.9;
        }

        /* Product Card styles */
        .product {
            position: relative;
            cursor: pointer;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            border-radius: 10px;
            transition: transform 0.3s ease;
        }

        .product:hover {
            transform: scale(1.1);
        }

        .product-image, .product-hover-image {
            width: 100%;
            height: auto;
            display: block;
            transition: opacity 0.3s ease;
        }

        .product-hover-image {
            opacity: 0;
            position: absolute;
            top: 0;
            left: 0;
        }

        .product:hover .product-hover-image {
            opacity: 1;
        }

        .product-info {
            padding: 10px;
            text-align: center;
            background-color: #fff;
            position: absolute;
            bottom: 0;
            width: 100%;
            border-top: 1px solid #ddd;
        }

        .product-info h3 {
            font-size: 16px;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .product-info p {
            font-size: 14px;
            color: #666;
        }
    </style>
