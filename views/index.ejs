        .category-item {
            position: relative;
            text-align: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            overflow: hidden;
            width: 100%;
            max-width: 400px; /* Limit width for each card */
            margin: 0 auto; /* Center align */
        }
    
        /* Image styling */
        .category-item img {
            width: 110%; /* Fully responsive width */
            height: auto; /* Maintain aspect ratio */
            max-height: 400px; /* Limit the image height */
            transition: opacity 0.3s ease-in-out;
            border-radius: 8px;
            cursor: pointer;
            
        }
    
        /* Text styling */
        .category-item .font-medium {
            margin-top: 10px;
            font-size: 1.2rem;
            font-weight: bold;
            transition: transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
            color: #333;
        }
    
        /* Hover effects for the entire category item */
        .category-item:hover {
            transform: scale(1.1); /* Slight zoom effect */
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4); /* Stronger shadow */
            border-radius: 8px; /* Smooth border radius */
        }
    
        /* Hover effect for the image */
        .category-item:hover img {
            opacity: 0.9; /* Slightly dim the image */
        }
    
        /* Hover effect for the text */
        .category-item:hover .font-medium {
            transform: scale(1.1); /* Slightly enlarge the text */
            opacity: 0.9; /* Slightly fade the text */
        }
    
        /* Flexbox container for responsive layout */
        .flex {
            display: flex;
            flex-wrap: wrap; /* Enable wrapping for smaller screens */
            gap: 1rem; /* Add spacing between items */
            justify-content: center; /* Center align items */
        }
    
        /* Responsive styles for different screen sizes */
        @media (max-width: 768px) {
            .category-item {
                max-width: 220px; /* Adjust width for smaller screens */
            }
        }
    
        @media (min-width: 768px) and (max-width: 1024px) {
            .category-item {
                max-width: 250px; /* Adjust width for medium screens */
            }
        }
    
        @media (min-width: 1024px) {
            .category-item {
                max-width: 300px; /* Adjust width for larger screens */
                max-height: 350px; /* Adjust height for consistency */
            }
        }
    
        @media (min-width: 1440px) {
            .category-item {
                max-width: 350px; /* Larger cards for very large screens */
            }
        }
    </style>
    
</head>
