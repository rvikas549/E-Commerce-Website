    </div>

    <!-- Products Section -->
    <section class="px-4 md:px-16 py-10">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8 text-center" id="productList">
            <!-- Products will be dynamically generated here -->
        </div>
    </section>

    <script>
       const products = [
            { id: 1, name: "Green Cargo's", image: "images/greenwomencargo.jpg", hoverImage: "images/greenwomencargo.jpg", price: 999.00, sizes: "S M L XL XXL", category: "Cargos" },
            { id: 2, name: "Blue Cargo's", image: "images/bluecargowomen.jpg", hoverImage: "images/bluecargowomen.jpg", price: 999.00, sizes: "S M L XL XXL", category: "Cargos" },
            { id: 3, name: "Black Cargo's", image: "images/blackcargowomen.jpg", hoverImage: "images/blackcargowomen.jpg", price: 999.00, sizes: "S M L XL XXL", category: "Cargos" },
            { id: 4, name: "Brown Cargo's", image: "images/browncargowomen.jpg", hoverImage: "images/browncargowomen.jpg", price: 999.00, sizes: "S M L XL XXL", category: "Cargos" },
            
            
            { id: 5, name: "Booty Jean's", image: "images/bootyjeans.jpg", hoverImage: "images/bootyjeans.jpg", price: 799.00, sizes: "S M L XL XXL", category: "Jean's" },
