            { id: 7, name: "Embroidery Jean's", image: "images/embjeans.jpg", hoverImage: "images/embjeans.jpg", price: 999.00, sizes: "S M L XL XXL", category: "Jean's" },
            { id: 8, name: "Denim Jean's", image: "images/denimjeans.jpg", hoverImage: "images/denimjeans.jpg", price: 999.00, sizes: "S M L XL XXL", category: "Jean's" },

            { id: 9, name: "Brown Skirt", image: "images/Skirt1.jpg", hoverImage: "images/Skirt1.jpg", price: 899.00, sizes: "S M L XL XXL", category: "Skirt" },
            { id: 10, name: "White Skirt", image: "images/Skirt2.jpg", hoverImage: "images/Skirt2.jpg", price: 899.00, sizes: "S M L XL XXL", category: "Skirt" },
            { id: 11, name: "Blue Skirt", image: "images/Skirt3.jpg", hoverImage: "images/Skirt3.jpg", price: 999.00, sizes: "S M L XL XXL", category: "Skirt" },
            { id: 12, name: "Pink Skirt", image: "images/Skirt4.jpg", hoverImage: "images/Skirt4.jpg", price: 999.00, sizes: "S M L XL XXL", category: "Skirt" },
        ];


        const productList = document.getElementById("productList");

        // Function to display products
        function displayProducts(category) {
            productList.innerHTML = ''; // Clear current products
            const filteredProducts = category ? products.filter(p => p.category === category) : products;

            filteredProducts.forEach(product => {
                const productCard = document.createElement("div");
                productCard.classList.add("product");

                // Include the id in the URL
                const queryParams = `?id=${product.id}&name=${encodeURIComponent(product.name)}&image=${encodeURIComponent(product.image)}&price=${encodeURIComponent(product.price)}&sizes=${encodeURIComponent(product.sizes)}`;

                productCard.innerHTML = `
                <a href="/product?id=${product.id}&name=${encodeURIComponent(product.name)}&image=${encodeURIComponent(product.image)}&price=${encodeURIComponent(product.price)}&sizes=${encodeURIComponent(product.sizes)}" class="product-link">
                    <img src="${product.image}" alt="${product.name}" class="product-image">
                    <img src="${product.hoverImage}" alt="${product.name}" class="product-hover-image">
                </a>
                <div class="product-info">
                    <h3>${product.name}</h3>
                    <p>â‚¹${product.price}</p>
                </div>
                `;

                productList.appendChild(productCard);
            });
        }

        // Filter button handlers
        document.getElementById("cargosFilter").addEventListener("click", () => displayProducts("Cargos"));
        document.getElementById("jeansFilter").addEventListener("click", () => displayProducts("Jean's"));
        document.getElementById("skirtsFilter").addEventListener("click", () => displayProducts("Skirt"));

        // Display all products by default
        displayProducts();

    </script>

</body>
</html>
