    <!-- Categories Section -->
    <section class="text-center py-10">
        <h2 class="text-3xl font-semibold mb-8">Women's Wear</h2>
        <div class="flex flex-col md:flex-row justify-center gap-8">
            <div class="text-center category-item">
                <a href="/womenstop">
